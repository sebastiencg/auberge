{% extends 'base.html.twig' %}

{% block title %}Bed{% endblock %}

{% block body %}
    <h1>Bed</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bed.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bed.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ bed.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>equipments</th>
                <td>{% for equipment in equipments %}
                        {{ equipment.name }},
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_bed_index') }}">back to list</a>

    <a href="{{ path('app_bed_edit', {'id': bed.id}) }}">edit</a>

    {{ include('bed/_delete_form.html.twig') }}
{% endblock %}
