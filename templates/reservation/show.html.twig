{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ reservation.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reservation.mail }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ reservation.price }}</td>
            </tr>
            <tr>
                <th>DateIn</th>
                <td>{{ reservation.dateIn ? reservation.dateIn|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateOut</th>
                <td>{{ reservation.dateOut ? reservation.dateOut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Room</th>
                <td>{{ reservation.bed.room.name }}</td>
            </tr>
            <tr>
                <th>Bed</th>
                <td>{{ reservation.bed.name }}</td>
            </tr>
            <tr>
                <th>Day</th>
                <td>{{ reservation.day }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ reservation.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">back to list</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
