{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ room.price }}</td>
            </tr>
            <tr>
                <th>place</th>
                <td>{{ room.place }}</td>
            </tr>
            <tr>
                <th>place Restante</th>
                <td>{{ room.place-bedOccupy|length }}</td>
            </tr>
            <tr>
                <th>image</th>
                <td><img src="{{ vich_uploader_asset(room.image, 'imageFile')}}" style="height: 100px"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_room_index') }}">back to list</a>

    <a href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>

    {{ include('room/_delete_form.html.twig') }}
{% endblock %}
